=form_for @recipe do |f|

	- if @recipe.errors.any?
		#error_explanation
			%h2= "#{pluralize(@recipe.errors.count, "error")} found:"
			%ul
				- @recipe.errors.full_messages.each do |msg|
					%li= msg

	%p= f.label :name
	%p= f.text_field :name

	%p= f.label :preparation_time
	%p= f.text_field :preparation_time
	%p 20 minutes is the maximum

	%p= f.label :ingredients
	%p= f.text_area :ingredients

	%p= f.label :procedure
	%p= f.text_area :procedure

	%p= f.submit 'save'